<Window x:Class="aoci_lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aoci_lab2"
        mc:Ignorable="d"
        Title="Лабораторная работа #2. Редактор цветовых пространств" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <StackPanel Margin="5">

                <Button Content="Открыть изображение" Click="LoadImage_Click" Margin="0,0,0,5" FontWeight="Bold"/>
                <Button Content="Сохранить изображение" Click="SaveImage_Click" Margin="0,0,0,20" FontWeight="Bold"/>
                <Button Content="Применить изменения" Click="UpdateImage_Click" Margin="0,0,0,5"/>
                <Button Content="Сбросить" Click="Clear_Click" Margin="0,0,0,20"/>
                <Button Content="Сепия" Click="Sepia_Click" Margin="0,0,0,15"/>

                <Border BorderBrush="DimGray" BorderThickness="1" Margin="5">
                    <StackPanel>
                        <Label Content="Изменения в RGB" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                        <Label Content="Яркость"/>
                        <Slider Minimum="-255" Maximum="255" Value="0" Name="BrightnessRGBSlider" ValueChanged="OnRGBFilterChanged" SmallChange="1" LargeChange="10"/>
                        <Label Content="Контраст"/>
                        <Slider Minimum="0.5" Maximum="3.0" Value="1.0" Name="ContrastRGBSlider" ValueChanged="OnRGBFilterChanged"/>
                        <Label Content="Насыщенность"/>
                        <Slider Minimum="0.0" Maximum="2.0" Value="1.0" Name="SaturationRGBSlider" ValueChanged="OnRGBFilterChanged" Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>

                
            </StackPanel>
        </Border>

        <Border Grid.Column="1" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <Image Name="MainImage"  Margin="5" Stretch="Uniform"/>
        </Border>

        <Border Grid.Column="2" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <StackPanel Margin="5">

                <Label Content="Гамма коррекция"/>
                <Slider Minimum="0.01" Maximum="5" Value="1" Name="GammaSlider" ValueChanged="GammaChanged" Margin="0,0,0,10"/>

                <Label Content="Постеризация"/>
                <Slider Minimum="2" Maximum="32" Value="8" Name="LevelsSlider" ValueChanged="LevelsChanged" Margin="0,0,0,10"/>

                <Border BorderBrush="DimGray" BorderThickness="1" Margin="5">
                    <StackPanel>
                        <Label Content="Изменения в HSV" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                        <Label Content="Яркость"/>
                        <Slider Minimum="-255" Maximum="255" Value="0" Name="BrightnessHSVSlider" ValueChanged="OnHSVFilterChanged" SmallChange="1" LargeChange="10"/>
                        <Label Content="Контраст"/>
                        <Slider Minimum="0.5" Maximum="3.0" Value="1.0" Name="ContrastHSVSlider" ValueChanged="OnHSVFilterChanged"/>
                        <Label Content="Насыщенность"/>
                        <Slider Minimum="0.0" Maximum="2.0" Value="1.0" Name="SaturationHSVSlider" ValueChanged="OnHSVFilterChanged"/>
                        <Label Content="Цветовой тон"/>
                        <Slider Minimum="-180" Maximum="180" Value="0" Name="HueHSVSlider" ValueChanged="OnHSVFilterChanged" Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
